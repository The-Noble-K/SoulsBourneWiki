<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, class: 'form-control', placeholder: 'Enter the title' %>
  </div>

  <div class="form-group">
    <%= form.text_area :body, class: 'form-control', placeholder: 'Enter the description' %>
  </div>

  <div class="form-group">
    <%= form.text_field :image_url, class: 'form-control', placeholder: 'Enter the image url' %>
  </div>

  <div class='c-select'>
    <%= form.collection_select :category_id, Category.all, :id, :name, {prompt: 'Choose a Weapon Category'}, class: 'form-control' %>
  </div>

  <div class='c-select'>
    <%= form.collection_select :category_id, Genre.all, :id, :name, {prompt: 'Choose a Weapon Genre'}, class: 'form-control' %>
  </div>
  
  <div class='c-select'>
    <%= form.collection_select :category_id, Game.all, :id, :name, {prompt: 'Choose a Game Title'}, class: 'form-control' %>
  </div>
  
  
  <div class="form-group">
    <%= form.submit 'Submit', class: 'btn btn-default btn-primary' %>
  </div>
<% end %>
